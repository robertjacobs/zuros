<launch>

	<!-- launch openni -->
	<include file="$(find openni2_launch)/launch/openni2.launch" />

	<!-- launch remapper from /camera/depth_registerd to /scan topic. This will make a laser scanner out of primesense camera -->
	<node pkg="depthimage_to_laserscan" type="depthimage_to_laserscan" name="depthimage_to_laserscan">
     	<remap from="image" to="/camera/depth/image_raw"/>
   	</node>

	<!-- launch emergency stop -->
	<!--<node name="zuros_emergency_stop_node" pkg="zuros_emergency_stop" type="emergency_scanner.py" output="screen"/>-->

	<!-- launch joystick -->
	<node name="zuros_joystick_node" pkg="joy" type="joy_node" output="screen"/>

	<!-- launch laptop battery monitor -->
	<node name="zuros_laptop_battery_node" pkg="zuros_laptop" type="laptop_battery.py" output="screen"/>

	<!-- launch movement -->
	<node pkg="zuros_movement" type="movement" name="movement_node" output="screen"/>

	<!-- launch threemxl controller -->
	<!-- <node pkg="zuros_threemxlController" type="threemxlController" name="threemxlController_node" output="screen"/> -->
</launch>
